<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lighthouse"
    tools:context=".Category">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="346dp"
        android:layout_height="569dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/custom_white_shape" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="346dp"
        android:layout_height="462dp"
        android:background="#EDFBFB"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Places"
                    android:layout_width="90dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/map4" />

                <TextView
                    android:id="@+id/PlaceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Places"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/Shedule"
                    android:layout_width="90dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/shedulenew" />
                />

                <TextView
                    android:id="@+id/SheduleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shedule"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/province"
                    android:layout_width="90dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ceylon" />

                <TextView
                    android:id="@+id/ProvinceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Province"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/hotel"
                    android:layout_width="90dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/hotel" />
                />

                <TextView
                    android:id="@+id/hotelText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hotel"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Guide"
                    android:layout_width="90dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/guide_removebg_preview" />

                <TextView
                    android:id="@+id/GuideText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hire Guide"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/Direction"
                    android:layout_width="90dp"
                    android:layout_height="104dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/direction_removebg_preview" />
                />

                <TextView
                    android:id="@+id/DirectionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Direction"
                    android:textAlignment="center"
                    android:textColor="#676767"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textAlignment="center"
        android:textColor="#63AB8D"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>